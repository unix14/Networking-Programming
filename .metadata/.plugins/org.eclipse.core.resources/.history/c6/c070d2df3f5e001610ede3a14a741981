#include <iostream>
#include "MessengerServer.h"

using namespace std;
using namespace npl;


void help();


int main() {
	string command;						//command from Command Line Interface
	cout<< "Messenger Server Application"<<endl;
	MessengerServer* server = new MessengerServer();	//run server
	help();			//Print commands

	while(true){
		command.clear();
		cin >> command;

		if(command == "x"){
			server->exit();
			break;
		}else if(command == "lu"){
            server->listUsers();
        }else if(command == "lcu"){
            server->listConnectedUsers();
        }else if(command == "ls"){
            server->listSessions();
        }else if(command == "lr"){
            server->listRooms();
        }else if(command == "lru"){			//List users from room
            string roomName;
            cin >> roomName;
            server->listRoomUsers(roomName);
        }else if (command == "help"){
        	help();
        }else{
			cout<<"Wrong input, try again"<<endl;
		}
	}
	delete server;
	cout<<"Messenger Server was closed"<<endl;
	return 0;
}

void help(){
	cout<<endl<< "lu - List Users"<<endl
	<<"lcu- List Connected Users"<<endl
    <<"ls - List Sessions"<<endl
	<<"lr - List Rooms"<<endl
	<<"lru <room name> - List Users in a Room"<<endl<<endl
	<<"help - Show help commands" <<endl
	<<"x - Exit"<<endl;
}
